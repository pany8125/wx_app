page {
  background: #f6f8fb;
  color: #1f2d3d;
}

.container {
  padding: 16px;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 12px;
  padding: 16px;
  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.06);
}

.btn-primary {
  background: linear-gradient(135deg, #0A59F7, #3B82F6);
  color: #fff;
  border-radius: 10px;
  padding: 12px;
  text-align: center;
  font-weight: 600;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 8px;
}
