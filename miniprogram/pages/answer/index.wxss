.header .title {
  font-size: 18px;
  font-weight: 700;
}

.header .sub {
  margin-top: 6px;
  color: #6b7280;
}

.question {
  margin-bottom: 12px;
}

.question-title {
  font-weight: 600;
  margin-bottom: 6px;
}

.question-type {
  font-size: 12px;
  color: #64748b;
  margin-bottom: 10px;
}

.option {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
  gap: 8px;
}

.input {
  border: 1px solid #e2e8f0;
  border-radius: 10px;
  padding: 10px;
  min-height: 80px;
  background: #fff;
}

.rating {
  display: flex;
  gap: 6px;
}

.star {
  font-size: 20px;
  color: #cbd5e1;
}

.star.active {
  color: #f59e0b;
}

.footer {
  text-align: center;
}

.footer button {
  width: 100%;
}
