.container {
  padding-bottom: 40px;
}

.picker {
  padding: 12px;
  border: 1px solid #e2e8f0;
  border-radius: 10px;
  margin-top: 10px;
  background: #fff;
}

.input {
  border: 1px solid #e2e8f0;
  border-radius: 10px;
  padding: 12px;
  margin-top: 10px;
  background: #fff;
}

.btn-row {
  display: flex;
  gap: 10px;
  margin-top: 12px;
}

.btn-secondary {
  flex: 1;
  margin-top: 0;
  background: #fff;
  color: #0A59F7;
  border: 1px solid #0A59F7;
  border-radius: 10px;
  padding: 12px;
  text-align: center;
  font-weight: 600;
}

.btn-ghost {
  border: 1px solid #e5e7eb;
  background: #fff;
  padding: 6px 10px;
  border-radius: 8px;
  font-size: 12px;
}

.btn-ghost.danger {
  color: #ef4444;
  border-color: #fecdd3;
}

.tips {
  margin-top: 8px;
  color: #9ca3af;
  font-size: 12px;
}

.session-row {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px 0;
  border-bottom: 1px solid #e5e7eb;
}

.session-row:last-child {
  border-bottom: none;
}

.session-info {
  flex: 1;
}

.session-name {
  font-weight: 600;
}

.session-meta {
  color: #9ca3af;
  font-size: 12px;
}

.session-status,
.status-pill {
  padding: 4px 8px;
  border-radius: 999px;
  font-size: 12px;
  border: 1px solid #e5e7eb;
}

.status-pub {
  background: #e0f2fe;
  color: #0369a1;
  border-color: #bae6fd;
}

.status-draft {
  background: #f1f5f9;
  color: #475569;
  border-color: #e2e8f0;
}

.inline {
  display: flex;
  align-items: center;
  gap: 8px;
}

.q-item {
  padding: 12px 0;
  border-bottom: 1px solid #e5e7eb;
}

.q-item:last-child {
  border-bottom: none;
}

.q-row {
  display: flex;
  align-items: center;
  gap: 8px;
}

.q-index {
  width: 24px;
  color: #475569;
}
